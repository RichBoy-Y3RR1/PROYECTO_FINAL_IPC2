<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="ganancias_por_anunciante"
              pageWidth="595"
              pageHeight="842"
              columnWidth="535"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20">

    <parameter name="fechaInicio" class="java.lang.String"/>
    <parameter name="fechaFin" class="java.lang.String"/>

    <field name="anunciante_nombre" class="java.lang.String"/>
    <field name="anunciante_email" class="java.lang.String"/>
    <field name="total_anuncios" class="java.lang.Integer"/>
    <field name="anuncios_activos" class="java.lang.Integer"/>
    <field name="total_invertido" class="java.math.BigDecimal"/>
    <field name="promedio_por_anuncio" class="java.math.BigDecimal"/>

    <variable name="total_invertido_sum" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{total_invertido}]]></variableExpression>
    </variable>

    <title>
        <band height="100">
            <staticText>
                <reportElement x="0" y="0" width="535" height="30"/>
                <textElement textAlignment="Center">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[Ganancias por Anunciante]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="35" width="535" height="20"/>
                <textElement textAlignment="Center">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Período: " + $P{fechaInicio} + " - " + $P{fechaFin}]]></textFieldExpression>
            </textField>
            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="400" y="75" width="135" height="20"/>
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Generado: " + new java.util.Date()]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="30">
            <staticText>
                <reportElement mode="Opaque" x="0" y="0" width="150" height="30" backcolor="#E0E0E0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Anunciante]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="150" y="0" width="70" height="30" backcolor="#E0E0E0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Total Anuncios]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="220" y="0" width="70" height="30" backcolor="#E0E0E0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Activos]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="290" y="0" width="122" height="30" backcolor="#E0E0E0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Total Invertido (Q)]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="412" y="0" width="123" height="30" backcolor="#E0E0E0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Promedio/Anuncio]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="35">
            <textField>
                <reportElement x="0" y="0" width="150" height="35"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="9"/>
                    <paragraph leftIndent="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{anunciante_nombre}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="150" y="0" width="70" height="35"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{total_anuncios}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="220" y="0" width="70" height="35"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{anuncios_activos}]]></textFieldExpression>
            </textField>
            <textField pattern="Q #,##0.00">
                <reportElement x="290" y="0" width="122" height="35"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                    <paragraph rightIndent="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{total_invertido}]]></textFieldExpression>
            </textField>
            <textField pattern="Q #,##0.00">
                <reportElement x="412" y="0" width="123" height="35"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9"/>
                    <paragraph rightIndent="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{promedio_por_anuncio}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <summary>
        <band height="50">
            <staticText>
                <reportElement mode="Opaque" x="0" y="10" width="290" height="30" backcolor="#D0D0D0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="11" isBold="true"/>
                    <paragraph rightIndent="10"/>
                </textElement>
                <text><![CDATA[TOTAL GANANCIAS:]]></text>
            </staticText>
            <textField pattern="Q #,##0.00">
                <reportElement mode="Opaque" x="290" y="10" width="245" height="30" backcolor="#FFD700"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="13" isBold="true"/>
                    <paragraph rightIndent="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{total_invertido_sum}]]></textFieldExpression>
            </textField>
        </band>
    </summary>

    <pageFooter>
        <band height="30">
            <textField>
                <reportElement x="0" y="10" width="535" height="20"/>
                <textElement textAlignment="Center">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
</jasperReport>

<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="anuncios_comprados"
              pageWidth="595"
              pageHeight="842"
              columnWidth="535"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20">

    <parameter name="fechaInicio" class="java.lang.String"/>
    <parameter name="fechaFin" class="java.lang.String"/>

    <field name="anuncio_titulo" class="java.lang.String"/>
    <field name="anuncio_tipo" class="java.lang.String"/>
    <field name="anunciante_nombre" class="java.lang.String"/>
    <field name="anunciante_email" class="java.lang.String"/>
    <field name="duracion_dias" class="java.lang.Integer"/>
    <field name="costo" class="java.math.BigDecimal"/>
    <field name="fecha_compra" class="java.lang.String"/>
    <field name="estado" class="java.lang.String"/>

    <variable name="total_anuncios" class="java.lang.Integer" calculation="Count">
        <variableExpression><![CDATA[1]]></variableExpression>
    </variable>

    <variable name="total_costo_sum" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{costo}]]></variableExpression>
    </variable>

    <title>
        <band height="100">
            <staticText>
                <reportElement x="0" y="0" width="535" height="30"/>
                <textElement textAlignment="Center">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[Reporte de Anuncios Comprados]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="35" width="535" height="20"/>
                <textElement textAlignment="Center">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Período: " + $P{fechaInicio} + " - " + $P{fechaFin}]]></textFieldExpression>
            </textField>
            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="400" y="75" width="135" height="20"/>
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Generado: " + new java.util.Date()]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="30">
            <staticText>
                <reportElement mode="Opaque" x="0" y="0" width="120" height="30" backcolor="#E0E0E0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Título]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="120" y="0" width="60" height="30" backcolor="#E0E0E0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Tipo]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="180" y="0" width="100" height="30" backcolor="#E0E0E0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Anunciante]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="280" y="0" width="50" height="30" backcolor="#E0E0E0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Días]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="330" y="0" width="70" height="30" backcolor="#E0E0E0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Costo (Q)]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="400" y="0" width="70" height="30" backcolor="#E0E0E0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Fecha]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="470" y="0" width="65" height="30" backcolor="#E0E0E0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Estado]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="30">
            <textField>
                <reportElement x="0" y="0" width="120" height="30"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="8"/>
                    <paragraph leftIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{anuncio_titulo}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="120" y="0" width="60" height="30"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{anuncio_tipo}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="180" y="0" width="100" height="30"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="7"/>
                    <paragraph leftIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{anunciante_nombre}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="280" y="0" width="50" height="30"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{duracion_dias}]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00">
                <reportElement x="330" y="0" width="70" height="30"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8"/>
                    <paragraph rightIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{costo}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="400" y="0" width="70" height="30"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="7"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{fecha_compra}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="470" y="0" width="65" height="30"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="7"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{estado}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <summary>
        <band height="50">
            <staticText>
                <reportElement mode="Opaque" x="0" y="10" width="280" height="30" backcolor="#D0D0D0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                    <paragraph rightIndent="10"/>
                </textElement>
                <text><![CDATA[TOTAL ANUNCIOS:]]></text>
            </staticText>
            <textField>
                <reportElement mode="Opaque" x="280" y="10" width="50" height="30" backcolor="#D0D0D0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{total_anuncios}]]></textFieldExpression>
            </textField>
            <textField pattern="Q #,##0.00">
                <reportElement mode="Opaque" x="330" y="10" width="205" height="30" backcolor="#D0D0D0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="11" isBold="true"/>
                    <paragraph rightIndent="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{total_costo_sum}]]></textFieldExpression>
            </textField>
        </band>
    </summary>

    <pageFooter>
        <band height="30">
            <textField>
                <reportElement x="0" y="10" width="535" height="20"/>
                <textElement textAlignment="Center">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
</jasperReport>

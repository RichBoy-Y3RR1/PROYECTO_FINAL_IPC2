<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="ganancias_sistema"
              pageWidth="842"
              pageHeight="595"
              orientation="Landscape"
              columnWidth="802"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20">

    <parameter name="fechaInicio" class="java.lang.String"/>
    <parameter name="fechaFin" class="java.lang.String"/>

    <field name="cine_nombre" class="java.lang.String"/>
    <field name="tipo_ingreso" class="java.lang.String"/>
    <field name="mes" class="java.lang.String"/>
    <field name="total_transacciones" class="java.lang.Integer"/>
    <field name="monto_total" class="java.math.BigDecimal"/>
    <field name="comision_sistema" class="java.math.BigDecimal"/>

    <variable name="total_transacciones_sum" class="java.lang.Integer" calculation="Sum">
        <variableExpression><![CDATA[$F{total_transacciones}]]></variableExpression>
    </variable>

    <variable name="total_monto_sum" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{monto_total}]]></variableExpression>
    </variable>

    <variable name="total_comision_sum" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{comision_sistema}]]></variableExpression>
    </variable>

    <title>
        <band height="120">
            <staticText>
                <reportElement x="0" y="0" width="802" height="40"/>
                <textElement textAlignment="Center">
                    <font size="24" isBold="true"/>
                </textElement>
                <text><![CDATA[Reporte de Ganancias del Sistema]]></text>
            </staticText>
            <staticText>
                <reportElement x="0" y="45" width="802" height="25"/>
                <textElement textAlignment="Center">
                    <font size="14" isItalic="true"/>
                </textElement>
                <text><![CDATA[Análisis Completo de Ingresos por Cine, Tipo y Mes]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="75" width="802" height="20"/>
                <textElement textAlignment="Center">
                    <font size="11"/>
                </textElement>
                <textFieldExpression><![CDATA["Período: " + $P{fechaInicio} + " - " + $P{fechaFin}]]></textFieldExpression>
            </textField>
            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="650" y="95" width="152" height="20"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Generado: " + new java.util.Date()]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="40">
            <staticText>
                <reportElement mode="Opaque" x="0" y="0" width="180" height="40" backcolor="#4CAF50"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="11" isBold="true" color="#FFFFFF"/>
                </textElement>
                <text><![CDATA[Cine]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="180" y="0" width="120" height="40" backcolor="#4CAF50"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="11" isBold="true" color="#FFFFFF"/>
                </textElement>
                <text><![CDATA[Tipo de Ingreso]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="300" y="0" width="120" height="40" backcolor="#4CAF50"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="11" isBold="true" color="#FFFFFF"/>
                </textElement>
                <text><![CDATA[Mes]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="420" y="0" width="100" height="40" backcolor="#4CAF50"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="11" isBold="true" color="#FFFFFF"/>
                </textElement>
                <text><![CDATA[Transacciones]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="520" y="0" width="141" height="40" backcolor="#4CAF50"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="11" isBold="true" color="#FFFFFF"/>
                </textElement>
                <text><![CDATA[Monto Total (Q)]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="661" y="0" width="141" height="40" backcolor="#4CAF50"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="11" isBold="true" color="#FFFFFF"/>
                </textElement>
                <text><![CDATA[Comisión Sistema (Q)]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="35">
            <textField>
                <reportElement x="0" y="0" width="180" height="35"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="9"/>
                    <paragraph leftIndent="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{cine_nombre}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="180" y="0" width="120" height="35"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{tipo_ingreso}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="300" y="0" width="120" height="35"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{mes}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="420" y="0" width="100" height="35"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{total_transacciones}]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00">
                <reportElement x="520" y="0" width="141" height="35"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9"/>
                    <paragraph rightIndent="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{monto_total}]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00">
                <reportElement x="661" y="0" width="141" height="35"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                    <paragraph rightIndent="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{comision_sistema}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <summary>
        <band height="80">
            <staticText>
                <reportElement mode="Opaque" x="0" y="10" width="420" height="40" backcolor="#2E7D32"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="14" isBold="true" color="#FFFFFF"/>
                    <paragraph rightIndent="20"/>
                </textElement>
                <text><![CDATA[TOTALES GENERALES:]]></text>
            </staticText>
            <textField>
                <reportElement mode="Opaque" x="420" y="10" width="100" height="40" backcolor="#2E7D32"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="13" isBold="true" color="#FFFFFF"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{total_transacciones_sum}]]></textFieldExpression>
            </textField>
            <textField pattern="Q #,##0.00">
                <reportElement mode="Opaque" x="520" y="10" width="141" height="40" backcolor="#2E7D32"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="13" isBold="true" color="#FFFFFF"/>
                    <paragraph rightIndent="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{total_monto_sum}]]></textFieldExpression>
            </textField>
            <textField pattern="Q #,##0.00">
                <reportElement mode="Opaque" x="661" y="10" width="141" height="40" backcolor="#FFD700"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="14" isBold="true"/>
                    <paragraph rightIndent="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{total_comision_sum}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="55" width="802" height="20"/>
                <textElement textAlignment="Center">
                    <font size="9" isItalic="true"/>
                </textElement>
                <text><![CDATA[* Comisión del sistema calculada como 10% del monto total de transacciones]]></text>
            </staticText>
        </band>
    </summary>

    <pageFooter>
        <band height="30">
            <textField>
                <reportElement x="0" y="10" width="802" height="20"/>
                <textElement textAlignment="Center">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
</jasperReport>
